{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["es2017"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.json", "**/*.ts", ".eslintrc.js", "jest.config.js"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
